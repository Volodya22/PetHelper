@model ClassLibrary.Service

<section class="wrapper style1">
    <div class="container">
        <div id="content">
            <h2>Редактировать</h2>
            <div class="alert alert-danger hidden" role="alert" id="errors">
                <p id="null-error">Все поля обязательны для заполнения!</p>
                <p id="name-error">Длина поля "Название" не должна превышать 50 символов!</p>
                <p id="desc-error">Длина поля "Описание" не должна превышать 150 символов!</p>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.Label("Название", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Цена", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Price)
                            @Html.ValidationMessageFor(model => model.Price)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Описание", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Description)
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 main">
                            <input type="submit" value="Сохранить" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Назад к списку", "Index")
            </div>
        </div>
    </div>
</section>

<script src="/Scripts/Services.js"></script>
<script>
    getService();

    $('form').on('submit', function (e) {
        if (serviceIsValid()) {
            putService();
        } else {
            e.preventDefault();
        }
    });
</script>
